{
  "$schema": "../.sitecore/schemas/ModuleFile.schema.json",
  "namespace": "sxastarter",
  "items": {
    "includes": [
      {
        "name": "templatesProject",
        "path": "/sitecore/templates/Project/Sites",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "templatesFeature",
        "path": "/sitecore/templates/Feature/Sites",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "branchesProject",
        "path": "/sitecore/templates/Branches/Project/Sites",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "branchesFeature",
        "path": "/sitecore/templates/Branches/Feature/Sites",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "modules",
        "path": "/sitecore/system/Settings/Feature/Sites",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "projectMediaFolders",
        "path": "/sitecore/Media Library/Project/Sites",
        "rules": [
          {
            "path": "/shared",
            "scope": "SingleItem",
            "allowedPushOperations": "CreateOnly"
          },
          {
            "path": "/sxastarter",
            "scope": "SingleItem",
            "allowedPushOperations": "CreateOnly"
          }
        ]
      },
      {
        "name": "layoutsProject",
        "path": "/sitecore/Layout/Layouts/Project/Sites",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "layoutsFeature",
        "path": "/sitecore/Layout/Layouts/Feature/Sites",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "projectRenderings",
        "path": "/sitecore/Layout/Renderings/Project/Sites",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "projectPlaceholderSettings",
        "path": "/sitecore/Layout/Placeholder Settings/Project/Sites",
        "allowedPushOperations": "CreateUpdateAndDelete"
      },
      {
        "name": "tenantRoot",
        "path": "/sitecore/content/Sites",
        "scope": "SingleItem",
        "allowedPushOperations": "CreateAndUpdate"
      },
      {
        "name": "site",
        "path": "/sitecore/content/Sites/sxastarter"
      }
    ]
  }
}
